<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailsNews.DetailsNewsActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:contentDescription="TODO" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/icon_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/outline_bookmark_border_24"
            android:contentDescription="TODO" />


        <ImageView
            android:id="@+id/icon_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/outline_share_24"
            android:contentDescription="TODO" />
    </LinearLayout>

    <ImageView
        android:id="@+id/hero_images"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="8dp"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Njflkhd khda jsdfk hfas fhewf sfhsadf hwfih sadfhf hfs fskjfhs fhew fhdfsdf jsfoisafa sf sifhsf hfios fhshf safi"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/hero_images" />

    <TextView
        android:id="@+id/news_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:text="Nico Ardia Effendy"
        android:textColor="@color/grey"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/news_title"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/news_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:layout_marginTop="20dp"
        android:text="fjsdkfjdk fdfasdf sldfhdsf sdfjk dhfj fdas hfjds fhdsjf hjshdf d hfdsakf dsfd f sdfds fjkd shfksdhfsda fkdsajfhd safdasf hdsjkf hksjd fhlksadfksjd fsjkd fshdj fsdjk fkjs dfh sdfhsdfjkhsdfkj dsfjk sdhf jdshf skjd fhsdjk fhsjkd fhshkd fksd fh sdfjkh weuifhskefhsdfhsjkd fsdjkf"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/news_author"
        tools:ignore="RtlSymmetry" />




</androidx.constraintlayout.widget.ConstraintLayout>